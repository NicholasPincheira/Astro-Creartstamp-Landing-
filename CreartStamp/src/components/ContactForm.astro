---
import background from "../assets/background.svg";
---

<section class="contactSection relative overflow-hidden h-screen shadow-lg">
    <!-- Fondo para la sección, limitado a este contenedor -->
    <img
        id="contacttBackground"
        src={background.src}
        alt="Background"
        fetchpriority="high"
        class="absolute inset-0 w-full h-full object-cover z-[-1] filter blur-3xl"
    />

    <div
        class="container mx-auto h-full px-4 flex flex-col items-center justify-center"
    >
        <h2
            class="text-5xl lg:text-7xl font-extrabold text-center mb-12 bg-gradient-to-bl from-rose-200 to-pink-900 bg-clip-text text-transparent"
        >
            Formulario de Contacto
        </h2>

        <form
            class="w-full max-w-lg bg-white bg-opacity-90 backdrop-blur-md p-10 rounded-xl shadow-2xl"
        >
            <div class="mb-6">
                <label
                    for="name"
                    class="block text-lg font-semibold text-gray-700 mb-2"
                >
                    Nombre
                </label>
                <input
                    id="name"
                    type="text"
                    placeholder="Ingresa tu nombre"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors"
                />
            </div>
            <div class="mb-6">
                <label
                    for="email"
                    class="block text-lg font-semibold text-gray-700 mb-2"
                >
                    Correo Electrónico
                </label>
                <input
                    id="email"
                    type="email"
                    placeholder="Ingresa tu email"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors"
                />
            </div>
            <div class="mb-6">
                <label
                    for="message"
                    class="block text-lg font-semibold text-gray-700 mb-2"
                >
                    Mensaje
                </label>
                <textarea
                    id="message"
                    rows="4"
                    placeholder="Escribe tu mensaje"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors"
                ></textarea>
            </div>
            <div class="text-center">
                <button
                    type="submit"
                    class="w-full bg-gradient-to-bl from-rose-200 to-pink-900 hover:bg-black text-white font-bold py-3 px-8 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-400 transition-colors"
                >
                    Enviar
                </button>
            </div>
        </form>
    </div>
</section>
